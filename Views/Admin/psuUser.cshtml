@model List<bbnl.Models.PSUUser>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "psuUser";
    if (@HttpContextAccessor.HttpContext.Session.GetString("usertype") == "admin")
    {
        Layout = "../Shared/_adminLayout.cshtml";
    }
    else
    {
        Layout = "../Shared/_adminLayoutpsu.cshtml";
    }
}


<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">PMU User</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>

                            <li class="breadcrumb-item active" aria-current="page">PMU User</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a asp-action="addpsuUser" asp-controller="admin" class="btn btn-danger">Add New</a>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">PMU User</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Sr. No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>State</th>
                                <th colspan="2" style="text-align:center">Action</th>
                            </tr>
                            
                        </thead>
                        <tbody class="list">
                            @{int i = 1;}
                            @foreach (var data in Model)
                            {
                            <tr>

                                <td>@(i++)</td>

                                <td>
                                    @data.Name
                                </td>
                                <td>
                                    @data.email
                                </td>
                                <td>
                                    @data.mobile
                                </td>
                                <td>
                                    @data.state
                                </td>

                                <td>
                                    <button type="button" class="btn btn-primary">Edit</button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger">Delete</button>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
