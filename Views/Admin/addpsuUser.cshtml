@model bbnl.Models.PSUUser
@{
    ViewData["Title"] = "AddPsuUser";
    //Layout = "../Shared/_innerLayout.cshtml";
    Layout = "../Shared/_adminLayout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    @*<h6 class="h2 text-white d-inline-block mb-0">Registration Form</h6>*@
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            @*<li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>

                            <li class="breadcrumb-item active" aria-current="page">Registration Form</li>*@
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    @*<a href="#" class="btn btn-sm btn-neutral">New</a>
                        <a href="#" class="btn btn-sm btn-neutral">Filters</a>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card-wrapper">
                <form asp-action="addpsuUser" enctype="multipart/form-data">
                    <div class="card">
                        <!-- Card header -->
                        <div class="card-header">
                            <h3 class="mb-0">Add PMU User</h3>
                        </div>
                        <!-- Card body -->
                        <div class="card-body">
                            @if (Convert.ToString(@TempData["error"]) != "")
                            {
                                <div class="row">
                                    <div class="col-lg-8">


                                        <label class="text-danger">@TempData["error"]</label>

                                    </div>
                                </div>
                            }
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="validationDefault01">Name  <span class="red-color">*</span></label>
                                        <input asp-for="Name"
                                               class="form-control"
                                               id="validationDefault01"
                                               placeholder="Email Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="validationDefault01">Email Address  <span class="red-color">*</span></label>
                                        <input asp-for="email"
                                               class="form-control"
                                               id="validationDefault01"
                                               placeholder="Email Address" />
                                        <span asp-validation-for="email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="validationDefault02">Mobile Number <span class="red-color">*</span></label>
                                        <input asp-for="mobile" maxlength="10"
                                               class="form-control"
                                               id="validationDefault02"
                                               placeholder="Mobile Number" />
                                        <span asp-validation-for="mobile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="validationDefault04">State <span class="red-color">*</span></label>
                                        <select class=" form-control" id="state_id" asp-for="state">
                                            <option value="">--Select--</option>
                                            @foreach (stateModel state in (List<stateModel>)ViewData["stateList"])
                                            {
                                                <option value="@state.states_id">@state.states_name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="state" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                   
                </form>
            </div>
        </div>
    </div>
</div>